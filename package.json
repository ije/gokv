{
  "name": "gokv",
  "version": "0.0.33",
  "description": "Sync your data at edge.",
  "type": "module",
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./types/mod.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "module": "./dist/index.mjs",
      "types": "./types/mod.d.ts"
    },
    "./react": {
      "module": "./dist/react.mjs",
      "types": "./types/react.d.ts"
    },
    "./web-polyfill": {
      "module": "./dist/web-polyfill.mjs"
    }
  },
  "files": [
    "dist/",
    "types/"
  ],
  "scripts": {
    "build": "pnpm esbuild --bundle --minify --platform=node --format=esm --target=node16 --sourcemap --outfile=dist/index.mjs mod.ts",
    "build:react": "pnpm esbuild --bundle --minify --platform=node --format=esm --target=node16 --external:react --external:../../mod.ts --sourcemap --outfile=dist/react.mjs react.ts && deno eval \"let f='dist/react.mjs';Deno.writeTextFileSync(f,Deno.readTextFileSync(f).replaceAll('../../mod.ts','gokv'))\"",
    "build:web-polyfill": "pnpm esbuild --bundle --minify --platform=node --format=esm --target=node16 --inject:./web-polyfill-shim.mjs --outfile=dist/web-polyfill.mjs web-polyfill.mjs",
    "build:all": "pnpm build && pnpm build:react && pnpm build:web-polyfill",
    "test": "pnpm build:all && node test/integration-test-for-node/bootstrap.mjs",
    "prepublishOnly": "rm -rf dist && pnpm build:all"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ije/gokv.git"
  },
  "bugs": {
    "url": "https://github.com/ije/gokv/issues"
  },
  "homepage": "https://gokv.io",
  "author": "ije",
  "license": "MIT",
  "devDependencies": {
    "@peculiar/webcrypto": "1.4.1",
    "dotenv": "16.0.3",
    "esbuild": "0.16.12",
    "node-fetch": "3.3.0",
    "websocket": "1.0.34"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
