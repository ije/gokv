{
  "name": "gokv",
  "version": "0.0.6",
  "description": "A global, low-latency, and druable key-value store.",
  "module": "dist/index.mjs",
  "browser": "dist/borwser.mjs",
  "types": "types.d.ts",
  "files": [
    "dist/",
    "types.d.ts"
  ],
  "scripts": {
    "build:browser": "pnpm esbuild --bundle --minify --platform=browser --format=esm --target=es2021 --outfile=dist/borwser.mjs mod.ts",
    "build:node": "pnpm esbuild --bundle --minify --platform=node --format=esm --target=es2021 --external:node-fetch --external:@peculiar/webcrypto --external:uuid --outfile=dist/index.mjs node.ts",
    "prepublishOnly": "pnpm build:node && pnpm build:browser"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/esm-dev/gokv.git"
  },
  "bugs": {
    "url": "https://github.com/esm-dev/gokv/issues"
  },
  "homepage": "https://gokv.io",
  "author": "ije",
  "license": "MIT",
  "dependencies": {
    "@peculiar/webcrypto": "^1.2.3",
    "node-fetch": "^3.1.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "esbuild": "^0.14.11"
  }
}
