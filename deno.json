{
  "imports": {
    "asserts": "https://deno.land/std@0.175.0/testing/asserts.ts",
    "dotenv": "https://deno.land/std@0.175.0/dotenv/load.ts",
    "react": "https://esm.sh/react@18.2.0",
    "react-dom/client": "https://esm.sh/react-dom@18.2.0/client",
    "gokv": "./mod.ts",
    "gokv/react": "./react.ts"
  },
  "tasks": {
    "test": "deno test -A --no-lock",
    "test:web": "deno run -A --no-lock --watch test/integration-tests-in-browser/_server.ts"
  },
  "test": {
    "files": {
      "include": [
        "src/"
      ]
    }
  },
  "fmt": {
    "options": {
      "lineWidth": 120
    },
    "files": {
      "exclude": [
        ".vscode/",
        "dist/",
        "node_modules/",
        "package.json",
        "CODE_OF_CONDUCT.md"
      ]
    }
  },
  "lint": {
    "files": {
      "exclude": [
        "dist/",
        "node_modules/"
      ]
    }
  }
}
